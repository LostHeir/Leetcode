class Solution:
    def isRepeated(self, ch: str) -> bool:
        if ch in self.data:
            return True
        self.data.append(ch)
        return False
    
    
    def lengthOfLongestSubstring(self, s: str) -> int:
        self.data = []
        self.r_indecies = [i for i in range(len(s)) if self.isRepeated(s[i])]
        
        start, stop = 0, 0
        result = []
        
        for index in self.r_indecies:
            
            if index - start > stop - start:
                stop = index
                result.append(stop-start)
                start = index
            
        if result:
            return max(result)
        else:
            if len(s) == 1:
                return 1
            elif len(s) == 2:
                return 2
            else:
                return 0
